@{
    /**/
    ViewBag.Title = "Восстановить пароль";
}
@model Document_storage_v2.Models.RestorePasswordViewModel

<h2>Registration</h2>
@using (Html.BeginForm("restorePassword", "Client", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-xs-3" for="inputLogin">Логин:</label>
        <div class="col-xs-9">
            <input type="text" class="form-control" name="UserLogin" placeholder="UserLogin">
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-xs-3" for="inputEmail">Email:</label>
        <div class="col-xs-9">
            <input type="email" class="form-control" name="Email" placeholder="Email">
        </div>
    </div>

    <div class="form-group">
        <div class="col-xs-offset-3 col-xs-9">
            <input type="submit" class="btn btn-primary" value="Восстановить пароль">
        </div>
    </div>
}



