@model Document_storage_v2.Models.AddDocument
@{
    long ParentId = (long)ViewData["ParentId"];
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Добавить документ</h4>
        </div>
        <div class="center-block">
            @using (Html.BeginForm("AddDocument", "Documents", FormMethod.Post, new { @class = "form-horizontal", enctype = "multipart/form-data" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-offset-2" for="inputname">Название файла</label>
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="text" class="form-control" placeholder="Название файла" name="FileName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-offset-2" for="inputShareFile3">Поделиться с: (Перечислять через запятую)</label>
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="text" class="form-control" placeholder="Поделиться с" name="ShareFileWithUser">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="file" class="btn btn-default btn-sm" name="File" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-default btn-sm">Добавить</button>
                        </div>
                    </div>
                    @Html.Hidden("FileFolderId", ParentId)
                </div>
            }
        </div>

    </div>
</div>



