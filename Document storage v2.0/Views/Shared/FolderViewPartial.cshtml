
@model Document_storage_v2.Models.AddFolder

@{ 
    long ParentId = (long)ViewData["ParentId"];
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h4 class="modal-title">Добавить папку</h4>
        </div>
        <div class="center-block">
            @using (Html.BeginForm("AddFolder", "Documents", FormMethod.Post, new { @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <div class="form-group">
                        <label class="col-sm-offset-2" for="inputname">Название папки</label>
                        <div class="col-sm-offset-2 col-sm-10">
                            <input type="text" class="form-control" placeholder="Название папки" name="FolderName">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-default btn-sm">Добавить папку</button>
                    </div>
                </div>
                @Html.Hidden("FolderParent", ParentId)
            }
        </div>

    </div>
</div>



